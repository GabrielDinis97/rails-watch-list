<h1>Add a movie to your <%= @list.name %> list</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
<%= f.input :comment %>
<%= f.association :movie, prompt: 'select a movie', input_html: {data: {controller: 'tom-select'}} %>
<%= f.submit 'Create a movie', class: 'btn btn-primary'%>
<% end %>

<%= link_to "Back to lists", lists_path, class: 'btn btn-primary' %>
